# Payment System Configuration
# Copy this file to .env.development and fill in the actual values

# Wompi Configuration (Colombia)
WOMPI_PUBLIC_KEY=pub_test_your_public_key_here
WOMPI_PRIVATE_KEY=prv_test_your_private_key_here
WOMPI_BASE_URL=https://sandbox.wompi.co
WOMPI_WEBHOOK_SECRET=your_webhook_secret_here

# ePayco Configuration (Optional - for future implementation)
# EPAYCO_PUBLIC_KEY=your_epayco_public_key
# EPAYCO_PRIVATE_KEY=your_epayco_private_key
# EPAYCO_BASE_URL=https://secure.epayco.co
# EPAYCO_WEBHOOK_SECRET=your_epayco_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_BASE_URL=https://api-m.sandbox.paypal.com
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here

# Stripe Configuration (Optional - for future implementation)
# STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Payment System Settings
COMMISSION_RATE_BPS=1000
PAYMENT_EXPIRY_MINUTES=15
RECONCILIATION_INTERVAL_MS=86400000

# Environment Settings
NODE_ENV=development

# Default Payment Provider
DEFAULT_PAYMENT_PROVIDER=wompi
